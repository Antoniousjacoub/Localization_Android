<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/tool_bar_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvAppLanguage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginEnd="@dimen/margin_20"
            android:text="@string/appLanguage"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/font_20" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginEnd="@dimen/margin_20"
            android:layout_marginBottom="@dimen/margin_20"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/margin_20"
                android:paddingEnd="@dimen/margin_20">

                <TextView
                    android:id="@+id/tvLangArabic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/padding_18"
                    android:text="@string/arabic"
                    android:textColor="@color/colorPrimary"
                    android:textDirection="locale"
                    android:textSize="@dimen/font_14" />

                <include
                    layout="@layout/view_line_separator"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/lineSeparatorHeight"
                    android:layout_marginTop="@dimen/padding_18" />

                <TextView
                    android:id="@+id/tvLangEnglish"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/margin_20"
                    android:paddingBottom="@dimen/padding_18"
                    android:text="@string/english"
                    android:textColor="@color/colorPrimary"
                    android:textDirection="locale"
                    android:textSize="@dimen/font_14" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>


</LinearLayout>